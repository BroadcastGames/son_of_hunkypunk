<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/switcherGameList"
    >

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerViewGameList"
        android:name="code.google.com.emptyapp102.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_gamelist_item" />

    <!-- android:empty is a pre-defined Android ID that will appear when a RecyclerView is empty -->
    <LinearLayout android:id="@id/android:empty"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_margin="10sp"
                  android:layout_weight="1"
                  android:gravity="center"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/empty_list"
            />
        <Button android:id="@+id/go_to_ifdb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/go_to_ifdb"
            />
        <Button android:id="@+id/download_preselected"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/download_preselected"
            />
    </LinearLayout>

</ViewSwitcher>