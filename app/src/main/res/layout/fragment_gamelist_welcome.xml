<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C0FFFF"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:contentDescription="House Icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello and welcome to Son of Hunkypunk experimental development release!  This screen will only appear the first time you use the app as part of checking that required file system permissions are granted."/>

    <TextView
        android:id="@+id/message_file_permissions_need0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permissions to External Storage not yet granted?"/>

    <TextView
        android:id="@+id/message_file_permissions_ready00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File access permissions are now ready, press the big Go! button to get things started. Thank you!"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/button_permissions_ready0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:visibility="gone"
        />

</LinearLayout>
